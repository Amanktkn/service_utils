#/usr/bin/sh

if [ $# -ne 2 ]
then
    echo "Usage: gidl <validation_xml_file> <output_directory>"
    exit 1
fi

file=$1
output_directory=$2
echo "Generating IDL:"$file
echo "--------------"
echo "lua $HOME/.luarocks/share/lua/5.3/idl_gen.lua $file $output_directory"
if [ "$output_directory" != "" ]
then
    mkdir -p $output_directory
    cd $output_directory
fi
lua $HOME/.luarocks/share/lua/5.3/idl_gen.lua ../$file $output_directory
if [ $? -ne 0 ]
then
	exit 1;
fi

